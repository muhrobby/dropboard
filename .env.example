# Database Configuration - External PostgreSQL
DATABASE_URL=postgresql://user:password@localhost:5432/dropboard

# Application Configuration
APP_PORT=3004
NEXT_PUBLIC_APP_URL=http://localhost:3004

# Better Auth Configuration
# Generate a random secret with: openssl rand -base64 32
BETTER_AUTH_SECRET=generate_with_openssl_rand_base64_32
# MUST be your public-facing URL in production (e.g. https://dropboard.yourdomain.com)
BETTER_AUTH_URL=http://localhost:3004

# Signed URL Configuration
# Generate a random secret with: openssl rand -base64 32
SIGNED_URL_SECRET=generate_with_openssl_rand_base64_32

# Cron endpoint authentication
# Generate a random secret with: openssl rand -hex 20
CRON_SECRET=generate_with_openssl_rand_hex_20

# CORS Configuration (comma-separated list of allowed origins)
# Include your production domain here
NEXT_PUBLIC_ALLOWED_ORIGINS=http://localhost:3004

# File upload
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE_MB=20

# Email Configuration
# Provider: "resend" or "smtp"
EMAIL_PROVIDER=resend
EMAIL_FROM=noreply@yourdomain.com

# For Resend (if EMAIL_PROVIDER=resend)
RESEND_API_KEY=

# For SMTP (if EMAIL_PROVIDER=smtp)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# Node Environment
NODE_ENV=production
